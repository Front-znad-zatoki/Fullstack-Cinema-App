{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": ["prettier", "airbnb", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "no-unused-vars": "warn",
    "no-console": "off",
    "func-names": "off",
    "no-process-exit": "off",
    "object-shorthand": "off",
    "class-methods-use-this": "off",
    "import/extensions": "off",
    "object-curly-newline": "warn",
    "consistent-return": "warn",
    "no-underscore-dangle":"warn"
  },
  "env": {
    "browser": true,
    "jest": true,
    "es6": true
  }
}
