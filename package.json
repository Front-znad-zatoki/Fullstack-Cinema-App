{
  "type": "module",
  "name": "fullstack",
  "version": "1.0.0",
  "description": "CodersCamp fullstack app",
  "main": "server.js",
  "scripts": {
    "format": "prettier --config .prettierrc --write \"api/**/*.js\" \"test/**/*.js\" \"**/*.json\" && fnpm run format --prefix client",
    "eslint": "eslint . --fix --ext .js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build:client": "npm run-script build --prefix client",
    "clean": "rimraf .cache && rimraf coverage && rimraf node_modules && rimraf build",
    "build": "npm i --prefix client && npm run build:client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Front-znad-zatoki/fullstack.git"
  },
  "keywords": [
    "coderscamp",
    "mern",
    "fzz"
  ],
  "author": "Front Znad Zatoki",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Front-znad-zatoki/fullstack/issues"
  },
  "homepage": "https://github.com/Front-znad-zatoki/fullstack#readme",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "config": "^3.3.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.9.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.17",
    "mongoose-unique-validator": "^2.0.3",
    "regenerator-runtime": "^0.13.7"
  },
  "devDependencies": {
    "@babel/core": "^7.12.17",
    "@babel/preset-env": "^7.12.17",
    "@testing-library/dom": "^7.29.4",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/user-event": "^12.7.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "concurrently": "^5.3.0",
    "cypress": "^6.5.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.5.1",
    "postcss-scss": "^3.0.4",
    "prettier": "^2.2.1",
    "prettier-stylelint": "^0.4.2",
    "rimraf": "^3.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "testRegex": "(spec|test)[.]js",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/client"
    ],
    "coverageDirectory": "../coverage",
    "setupFiles": [
      "./test/setupJest.js"
    ],
    "collectCoverageFrom": [
      "./features/**"
    ]
  },
  "staticFiles": {
    "staticPath": [
      {
        "staticPath": "static",
        "staticOutDir": "static"
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format",
      "pre-push": "npm run format && npm run test"
    }
  }
}
